<% include ../templete/header %>
  
  <div class="content-wrapper">
   
    <section class="content-header">
      <h1>
        Category List
       
      </h1>
     
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Info boxes -->
      <div class="row">
      
      <div class="col-xs-12">
		 <% if(locals.success_messages){ %>
                        <h4 class="msg" style="color: green;margin-left: 10%;"><%=success_messages%></h4>
                        <% } %>
          <div class="box">
            <div class="box-header">
             
			  <a href="/admin/addCategory" class="btn btn-block btn-primary" style="width: 10%;float: right;">Add Category</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Sr.No</th>
                  <th>Category</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
				<% for(var i=0; i<data.length; i++){ %>
                <tr>
                  <td><%= i+1; %></td>
                  <td><%= data[i].name; %></td>
                  <td> <a href="/admin/delete_category/<%= data[i]._id; %>" onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i></a></td>
                </tr>
				 <%  } %>


                </tbody>
                
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>

      </div>
   
    </section>
    <!-- /.content -->
  </div>

  <% include ../templete/footer %>
